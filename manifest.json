{
  "manifest_version": 2,
  "name": "No Comment",
  "version": "0.1.2",
  "description": "Stop yourself from commenting on forums, social media, and elsewhere on the Web during your work hours.",
  "content_scripts": [
    {
      "js": ["util.js", "main.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "icons": {
    "16": "icon16x16.png",
    "48": "icon48x48.png",
    "128": "icon128x128.png"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "permissions": [
    "storage"
  ]
}